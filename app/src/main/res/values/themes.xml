<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Goy" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/material_dynamic_secondary40</item>
        <item name="colorOnSecondary">@color/md_theme_dark_onSecondary</item>
        <item name="background">@color/material_dynamic_secondary60</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/material_dynamic_secondary40</item>
        <!-- Customize your theme here. -->

        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
    </style>

    <style name="RoundedDialogTheme" parent="Theme.Material3.Dark.Dialog">
        <item name="android:background">@drawable/rounded_corners</item>
        <item name="shapeAppearance">@style/RoundedShapeAppearance</item>
    </style>

    <style name="RoundedShapeAppearance" parent="">
        <item name="cornerSize">16dp</item>
    </style>
    
    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@android:color/holo_blue_dark</item>
        <item name="android:background">@drawable/rounded_corners</item>
    </style>
</resources>