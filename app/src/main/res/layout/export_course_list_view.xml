<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/export_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/export_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:layout_below="@+id/export_title"
        android:paddingTop="5dp"
        />

    <TextView
        android:id="@+id/export_start_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:textSize="15sp"
        android:textStyle="italic"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:layout_below="@+id/export_subtitle"
        app:drawableLeftCompat="@drawable/ic_date" />
    <TextView
        android:id="@+id/export_end_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:textSize="15sp"
        android:textStyle="italic"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:paddingTop="20dp"
        android:layout_below="@+id/export_start_date"
        app:drawableLeftCompat="@drawable/ic_date"
        />

</RelativeLayout>